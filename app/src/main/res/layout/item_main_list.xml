<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_item"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/app_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="护眼模式"/>

            <TextView
                android:id="@+id/tv_custom_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_on"
                android:textColor="@color/on_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="自定义亮度"/>

            <TextView
                android:id="@+id/tv_custom_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_off"
                android:textColor="@color/off_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="自定义颜色"/>

            <TextView
                android:id="@+id/tv_custom_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_off"
                android:textColor="@color/off_color"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:background="@color/line_color"/>
</RelativeLayout>
