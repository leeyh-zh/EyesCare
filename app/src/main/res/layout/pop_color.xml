<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/color_button_size"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/color_button_size"
        android:layout_height="wrap_content"
        android:background="@mipmap/pop_top_bg"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/menu1"
            android:layout_width="@dimen/pop_button_width"
            android:layout_height="@dimen/pop_button_height"
            android:background="#546E7A"
            android:padding="@dimen/color_text_padding"
            android:text="-2"
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/menu2"
            android:layout_width="@dimen/pop_button_width"
            android:layout_height="@dimen/pop_button_height"
            android:background="#546E7A"
            android:padding="@dimen/color_text_padding"
            android:text="-1"
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/menu3"
            android:layout_width="@dimen/pop_button_width"
            android:layout_height="@dimen/pop_button_height"
            android:background="#546E7A"
            android:padding="@dimen/color_text_padding"
            android:text="默认"
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/menu4"
            android:layout_width="@dimen/pop_button_width"
            android:layout_height="@dimen/pop_button_height"
            android:background="#546E7A"
            android:padding="@dimen/color_text_padding"
            android:text="+1"
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/menu5"
            android:layout_width="@dimen/pop_button_width"
            android:layout_height="@dimen/pop_button_height"
            android:layout_marginBottom="23dp"
            android:background="#546E7A"
            android:padding="@dimen/color_text_padding"
            android:text="+2"
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</LinearLayout>