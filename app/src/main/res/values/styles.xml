<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchStyle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:track">@drawable/switch_track_holo_light</item>
        <item name="android:thumb">@drawable/switch_thumb_holo_light</item>
        <item name="android:textOn">" "</item>
        <item name="android:textOff">" "</item>
        <item name="android:thumbTextPadding">10dip</item>
        <item name="android:switchMinWidth">43dip</item>
        <item name="android:switchPadding">0dip</item>
    </style>

    <style name="colorPopupWindow" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>
</resources>
